<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.smartrecipemanager.ui.CalorieQuery.CalorieQueryFragment"
        android:label="Query"
        tools:layout="@layout/fragment_calorieAdd" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.smartrecipemanager.ui.CalorieAdd.CalorieAddFragment"
        android:label="Record"
        tools:layout="@layout/fragment_calorieAdd" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.smartrecipemanager.ui.CalorieHistory.CalorieHistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_calorieHistory" />
</navigation>