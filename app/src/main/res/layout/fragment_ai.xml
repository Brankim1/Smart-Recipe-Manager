<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AiFragment">
    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <Button
           android:id="@+id/uploadImage"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="upload Image"/>

       <ImageView
           android:layout_width="match_parent"
           android:id="@+id/AiImage"
           android:layout_height="200dp"
           android:adjustViewBounds="true"
           app:layout_collapseMode="parallax"
           app:layout_collapseParallaxMultiplier="0.7"/>
       <Button
           android:id="@+id/searchAi"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="search AI"/>
       <Button
           android:id="@+id/searchAiRecipe"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="search Recipes"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Please select Ingredients below:"
           android:layout_gravity="center"
           android:gravity="center"
           android:textSize="15dp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="PREDICTED INGREDIENT  :  PROBABILITY"
           android:layout_gravity="center"
           android:gravity="center"
           android:textSize="11dp"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/AiRecyclerView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>
   </LinearLayout>
</FrameLayout>